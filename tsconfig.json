{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "composite": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir":"dist",
    "downlevelIteration": true,
  },
  "include": ["lib/**/*"],
  "exclude": ["*.test.ts"]
}